<!DOCTYPE html>
<html>
  <head>
    <title>Accelerando: Pieces</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Accelerando</h1></a>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li><a href="/pieces/<%=item._id%>"><%=item.pieceTi%></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No pieces found.</div>
    <% } %>
    <div class="control">
      <h2>Search for pieces by name</h2>
      <form method="get" action="/pieces/">
        <label>Piece name: <input name="name"></label>
        <button>Search</button>
      </form>
    </div>
  </body>
</html>
